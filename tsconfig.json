{
  "compilerOptions": {
    "target": "ES2016",
    "module": "ES2020",
    "strict": true,
    "noImplicitThis": false,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "allowUmdGlobalAccess": true,
    "removeComments": true
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ],
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "Recommended"
}